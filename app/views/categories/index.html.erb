<p style="color: green"><%= notice %></p>

<% content_for :title, "Categories" %>

<h1><%= t('categories.index.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('categories.index.name') %></th>
      <th><%= t('categories.index.description') %></th>
      <th><%= t('categories.index.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to t('categories.index.show'), category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('categories.index.new_category'), new_category_path %>
