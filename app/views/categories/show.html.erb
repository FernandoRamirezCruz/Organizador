<h1><%= t('categories.show.title', name: @category.name) %></h1>

<p>
  <strong><%= t('categories.show.name') %>:</strong>
  <%= @category.name %>
</p>

<p>
  <strong><%= t('categories.show.description') %>:</strong>
  <%= @category.description %>
</p>

<p style="color: green"><%= notice %></p>

<%= render @category %>

<div>
  <%= link_to t('categories.show.edit'), edit_category_path(@category) %> |
  <%= link_to t('categories.show.back'), categories_path %>

  <%= button_to "Destroy this category", @category, method: :delete %>
</div>
