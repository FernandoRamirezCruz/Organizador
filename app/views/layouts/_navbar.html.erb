<!-- app/views/layouts/_navbar.html.erb -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue">
  <a class="navbar-brand">
    <%= image_tag 'logo.png', class: 'd-inline-block align-top', width: 85 %>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>">Inicio <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= categories_path %>">Categorías</a>
      </li>
    </ul>
    <%= link_to 'Crear Tarea', new_task_path, class: 'btn btn-light ml-2' %>
    <!-- If the user is logged in -->
    <div class="dropdown dropdown-user">
      <a id="userMenu" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= image_tag "https://robohash.org/#{current_user.email}?size=38x38" %>
      </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenu">
        <span class="dropdown-item small text-right"><%= current_user.email %></span>
        <div class="dropdown-divider"></div>
        <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
          <i class="fas fa-sign-out"></i> Cerrar sesión
        <% end %>
      </div>
    </div>
  </div>
</nav>