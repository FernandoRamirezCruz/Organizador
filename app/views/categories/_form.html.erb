<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('categories.form.errors', count: category.errors.count) %></h2>
      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, t('categories.form.name') %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description, t('categories.form.description') %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit t('categories.form.submit') %>
  </div>
<% end %>
